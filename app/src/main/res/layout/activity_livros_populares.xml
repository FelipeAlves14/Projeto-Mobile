<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LivrosPopularesActivity"
    android:background="#F9F8FF" >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#fefefeff"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logoPratiler"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/logo"
                    app:srcCompat="@drawable/pratiler" />

                <EditText
                    android:id="@+id/barraPesquisa"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:autofillHints="livros"
                    android:ems="10"
                    android:hint="@string/placeholderPesquisa"
                    android:inputType="text" />

                <ImageView
                    android:id="@+id/perfilUsuario"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:contentDescription="@string/headerPerfil"
                    app:srcCompat="@drawable/perfil" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:backgroundTint="#fefefe">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_margin="20dp">
                <ImageView
                    android:id="@+id/capaLivro1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:contentDescription="@string/capaLivro"
                    app:srcCompat="@drawable/livrocard"/>
                <TextView
                    android:id="@+id/tituloLivro1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:text="@string/tituloAutorLivro"
                    android:textStyle="bold"
                    android:textColor="#3D3569"/>
                <TextView
                    android:id="@+id/sinopseLivro1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textoLorem"
                    android:textColor="#000000"/>
                <Button
                    android:id="@+id/comecarLeitura1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="@string/botaoComecarLeituraTexto"
                    android:textAllCaps="false"
                    android:textColor="#fefefe"
                    android:backgroundTint="#3D3569"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

