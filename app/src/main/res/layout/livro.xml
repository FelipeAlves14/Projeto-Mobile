<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:layout_gravity="center">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:backgroundTint="#fefefe">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="20dp">
            <ImageView
                android:id="@+id/capaLivro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:contentDescription="@string/capaLivro"
                app:srcCompat="@drawable/livrocard"/>
            <TextView
                android:id="@+id/tituloLivro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="@string/tituloAutorLivro"
                android:textStyle="bold"
                android:textColor="#3D3569"/>
            <TextView
                android:id="@+id/sinopseLivro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textoLorem"
                android:textColor="#000000"/>
            <Button
                android:id="@+id/comecarLeitura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="@string/botaoComecarLeituraTexto"
                android:textAllCaps="false"
                android:textColor="#fefefe"
                android:backgroundTint="#3D3569"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>